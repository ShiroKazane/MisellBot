{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.json"
    ]
  },
  "formatter": {
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessFragments": "off",
        "noUselessConstructor": "off"
      },
      "style": {
        "useImportType": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noConstEnum": "off",
        "noExplicitAny": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  }
}